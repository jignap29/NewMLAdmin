{
  "name": "mylogistix",
  "version": "1.0.0",
  "description": "MyLogistix - Logistics Management System",
  "main": "api/index.js",
  "scripts": {
    "build": "cd frontend && npm run build",
    "start": "node api/index.js",
    "dev": "concurrently \"cd backend && npm start\" \"cd frontend && npm start\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "vercel-build": "cd frontend && npm run build",
    "prebuild": "npm run install-all",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mongoose": "^7.0.4",
    "dotenv": "^16.4.7",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "axios": "^1.9.0",
    "body-parser": "^1.20.2",
    "csv-parser": "^3.2.0",
    "csvtojson": "^2.0.10",
    "exceljs": "^4.4.0",
    "fast-csv": "^5.0.2",
    "json2csv": "^6.0.0-alpha.2",
    "mongoose-unique-validator": "^4.0.1",
    "papaparse": "^5.5.3",
    "puppeteer": "^24.9.0",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
